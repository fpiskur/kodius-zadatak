<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_with(url: password_resets_path, scope: :password_reset,
                  local: true) do |form| %>
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>

      <%= form.submit "Submit", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>